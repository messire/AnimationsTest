<Window x:Class="AnimationDrawing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimationDrawing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseMove="Window_MouseMove" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged" MouseRightButtonDown="Window_MouseRightButtonDown">
    <Grid>
        <StackPanel Background="AliceBlue">
            <Canvas Name="DrawPanel"/>
        </StackPanel>
        <ToolBarPanel Height="23" Background="LightGray" VerticalAlignment="Bottom" Orientation="Horizontal">
            <TextBlock x:Name="TbWindowInfo" FontSize="14"></TextBlock>
            <TextBlock FontSize="14" Width="80">| Dot count:</TextBlock>
            <TextBlock x:Name="TbDotInfo" FontSize="14"></TextBlock>
            <TextBlock x:Name="TbMouseInfo" FontSize="14"></TextBlock>
        </ToolBarPanel>
    </Grid>
</Window>
