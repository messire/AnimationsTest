<Window x:Class="ChaosGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChaosGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" MouseLeftButtonUp="Window_MouseLeftButtonUp" MouseRightButtonUp="Window_MouseRightButtonUp" >
    <Grid>
        <StackPanel Background="AliceBlue">
            <Canvas Name="DrawPanel"/>
            <StatusBar  DockPanel.Dock="Bottom" >
                <StatusBarItem>
                    <TextBlock Name="ChaosInfo"></TextBlock>
                </StatusBarItem>
            </StatusBar>
        </StackPanel>
    </Grid>
</Window>
